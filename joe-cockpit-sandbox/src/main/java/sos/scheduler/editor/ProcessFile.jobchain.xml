    <job_chain_node  state="Wait4File" job="sos/jitl/ExistsFile" next_state="ProcessFile" error_state="!Wait4File"/>
    <job_chain_node  state="ProcessFile" job="changeme" next_state="DeleteFile" error_state="!ProcessFile"/>
